<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlay">

    <SurfaceView
        android:id="@+id/suv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ig_stop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.75"
        app:srcCompat="@mipmap/video_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/not_liked"
        android:layout_width="80dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/white_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/is_liked"
        android:layout_width="80dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/red_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/video_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/sb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#FF0066"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="asdfasdf"
        />
    <SeekBar
        android:id="@+id/sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/suv"
        app:layout_constraintTop_toTopOf="@+id/suv"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>